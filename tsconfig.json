{
  "compilerOptions": {
    // "strict": true,
    "jsx": "react-jsx",
    "baseUrl": "src",
    "paths": {
      "@layouts/*": ["layouts/*"],
      "@app/*": ["app/*"],
      "@pages/*": ["pages/*"],
      "@features/*": ["features/*"],
      "@widgets/*": ["widgets/*"],
      "@entities/*": ["entities/*"],
      "@shared/*": ["shared/*"]
    },
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true, // Додає підтримку імпорту JSON
    "lib": ["es2015", "dom"]
  }
}


